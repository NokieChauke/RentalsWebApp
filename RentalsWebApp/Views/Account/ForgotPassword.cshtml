@using RentalsWebApp.ViewModels
@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="row">
    <div class="col-md-12 offset-3">
        <h1>Reset Password</h1>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }
        <div class="row">
            <div class="col-md-8 ">
                <hr class="mt-0 mb-8">
                <div class="col-xl-8">
                    <div class="card mb-12">
                        <div class="card-header">Password Reset</div>
                        <div class="card-body">
                            <form asp-action="ForgotPassword">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group col-md-12">
                                    <label asp-for="EmailAddress" class="control-label"></label>
                                    <input asp-for="EmailAddress" class="form-control">
                                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                </div>

                                <div class="form-group offset-3">
                                    <input class="btn btn-outline-secondary float right" type="submit" value="Reset" />
                                    <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="Login">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div> 