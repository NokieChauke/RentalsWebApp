@using RentalsWebApp.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-12 offset-3">
        <h1>Log in to your account</h1>
        @if(TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div> 
        }
        <div class="row">
            <div class="col-md-8 ">
                <hr class="mt-0 mb-8">
                <div class="col-xl-8">
                    <div class="card mb-12">
                        <div class="card-header">Login</div>
                        <div class="card-body">
                            <form asp-action="Login">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group col-md-12">
                                    <label asp-for="EmailAddress" class="control-label"></label>
                                    <input asp-for="EmailAddress" class="form-control">
                                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                </div> 
                   
                                <div class="form-group col-md-12">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input asp-for="Password" class="form-control">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-group offset-3">
                                    <input class="btn btn-outline-secondary float right" type="submit" value="Log in" />
                                    <a class="btn btn-outline-secondary" asp-controller="Apartments" asp-action="Index">Cancel</a>
                                </div>
                                <div class="form-group offset-3">
                                   Or <a id="add__new__list" position="absolute" data-toggle="modal" data-target=".bd-example-modal-lg" asp-area="" asp-controller="Account" asp-action="ForgotPassword">Forgot Password</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div> 