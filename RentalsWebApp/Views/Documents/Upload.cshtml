@using RentalsWebApp.ViewModels
@model DocumentsViewModel

<h1>Upload Documents</h1>
<!-- Account page navigation-->
<nav class="nav nav-borders">
    <a class="nav-link" asp-controller="Dashboard" asp-action="EditUserProfileByAdmin" asp-route-id="@Model.AppUserId" target="__self">Account Details</a>
    <a class="nav-link" asp-controller="Documents" asp-action="Index" asp-route-id="@Model.AppUserId" target="__self">Documents</a>
    <a class="nav-link" asp-controller="Billing" asp-action="Index" asp-route-id="@Model.AppUserId" target="__self">Billing</a>
    @if (User.Identity.IsAuthenticated && User.IsInRole("tenant"))
    {
        <a class="nav-link" asp-controller="Dashboard" asp-action="Security" asp-route-id="@Model.AppUserId" target="__self">Security</a>
    }
    <a class="nav-link" asp-controller="Dashboard" asp-action="Notification" asp-route-id="@Model.AppUserId" target="__self">Notifications</a>
</nav>
<div class="col-xl-8">
    <!-- Account details card-->
    <div class="card mb-4">
        <div class="card-header">Documents Upload</div>
        <div class="card-body">
            <form method="post" asp-action="Upload" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId" />
                <div class="mb-3">
                    <label asp-for="IdCard" class="control-label"></label>
                    <input asp-for="IdCard" class="form-control" type="file"  placeholder="Id copy">
                    <span asp-validation-for="IdCard" class="text-danger"></span>
                </div>
                <!-- Form Row-->
                <div class="row gx-3 mb-3">

                    <div class="col-md-6">
                        <label asp-for="Contract" class="control-label"></label>
                        <input asp-for="Contract" class="form-control" type="file" placeholder="Signed Contract">
                        <span asp-validation-for="Contract" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PaySlip" class="control-label"></label>
                        <input asp-for="PaySlip" class="form-control" type="file" placeholder="Name">
                        <span asp-validation-for="PaySlip" class="text-danger"></span>
                    </div>
                </div>
                @if(User.Identity.IsAuthenticated && User.IsInRole("admin"))
                {
                    <button type="submit" class="btn btn-sm btn-outline-primary">Save</button>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-sm btn-outline-primary">Cancel</a>
                   
                }
                else if(User.Identity.IsAuthenticated && User.IsInRole("tenant"))
                {
                    <a asp-controller="Dashboard" asp-action="EditUserProfile" class="btn btn-sm btn-outline-secondary">Back</a>
                    <button type="submit" class="btn btn-sm btn-outline-secondary">Save and Continue</button>
                    <a asp-controller="Dashboard" asp-action="UserProfile" class="btn btn-sm btn-outline-secondary">Cancel</a>
                }

            </form>
        </div>
    </div>
</div>