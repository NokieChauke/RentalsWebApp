@using RentalsWebApp.ViewModels
@model EditDocumentsViewModel

@{
    ViewData["Title"] = "Edit Documents";
}

<h1>Edit Documents</h1>
<!-- Account page navigation-->
<nav class="nav nav-borders">
    <a class="nav-link" asp-controller="Dashboard" asp-action="EditUserProfile" target="__self">Account Details</a>
    <a class="nav-link" asp-controller="Documents" asp-action="Index" target="__self">Documents</a>
    <a class="nav-link" asp-controller="Billing" asp-action="Index" target="__self">Billing</a>
    @if (User.Identity.IsAuthenticated && User.IsInRole("tenant"))
    {
        <a class="nav-link" asp-controller="Dashboard" asp-action="Security" target="__self">Security</a>
    }
    <a class="nav-link" asp-controller="Dashboard" asp-action="Notification" target="__self">Notifications</a>
</nav>
</nav>
<hr class="mt-0 mb-4">
<div class="col-xl-8">
    <!-- Account details card-->
    <div class="card mb-4">
        <div class="card-header">Edit Documents</div>
        <div class="card-body">
            <form method="post" asp-action="EditDocuments" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId" />
                <div class="mb-3">
                    <label asp-for="IdCopy" class="control-label"></label>
                    <input asp-for="IdCopy" class="form-control" type="file" placeholder="Id copy">
                    <span asp-validation-for="IdCopy" class="text-danger"></span>
                </div>
                <!-- Form Row-->
                <div class="row gx-3 mb-3">

                    <div class="col-md-6">
                        <label asp-for="Contract" class="control-label"></label>
                        <input asp-for="Contract" class="form-control" type="file" placeholder="Signed Contract">
                        <span asp-validation-for="Contract" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PaySlip" class="control-label"></label>
                        <input asp-for="PaySlip" class="form-control" type="file" placeholder="Name">
                        <span asp-validation-for="PaySlip" class="text-danger"></span>
                    </div>
                </div>  
                <div>
                    <button type="submit" class="btn btn-sm btn-outline-primary">Update</button>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-sm btn-outline-primary">Cancel</a>
                </div>
             

            </form>
        </div>
    </div>
</div>