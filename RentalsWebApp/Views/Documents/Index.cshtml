@using RentalsWebApp.ViewModels
@model DocumentsViewModel


<h1 class="display-6 fw-normal">Uploaded Doduments</h1>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Apartments" asp-action="Create">Update Documents</a>

<div class="container my-5">
    <div class="card">
        <a id="add__new__list" position-absolute" data-toggle="modal" data-target=".bd-example-modal-lg" asp-area="" asp-controller="Account" asp-action="Register">Add Tenetnt</a>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Contact</th>
                    <th scope="col">Edit Tenent </th>
                    <th scope="col">Tenent Details</th>
                </tr>
            </thead>            
            <tbody>
                <tr>
                    <th scope="row"></th>
                    <td>@Model.IdCard.FileName</td>
                    <td>@Model.Contract.FileName</td>
                    <td>@Model.PaySlip.FileName</td>
                    <td>
                    <a asp-controller="Dashboard" asp-action="EditUserProfile" asp-route-id="@Model.AppUserId"
                            class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a class="btn btn-sm btn-danger" href="#"><i class="fas fa-trash-alt"></i> delete</a>
                    </td>
                    <td>
                    <a asp-controller="Dashboard" asp-action="UserProfile" asp-route-id="@Model.AppUserId" class="btn btn-sm btn-outline-secondary">Detail</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
