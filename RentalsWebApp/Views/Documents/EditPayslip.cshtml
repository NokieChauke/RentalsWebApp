@using RentalsWebApp.ViewModels
@model EditDocumentsViewModel

@{
    ViewData["Title"] = "Edit Payslip";
}

<h1>Upload Documents</h1>
<!-- Account page navigation-->
<nav class="nav nav-borders">
    <a class="nav-link" asp-controller="Dashboard" asp-action="EditUserProfile" target="__self">Account Details</a>
    <a class="nav-link" asp-controller="Documents" asp-action="Index" target="__self">Documents</a>
    <a class="nav-link" asp-controller="Billing" asp-action="Index" target="__self">Billing</a>
    @if (User.Identity.IsAuthenticated && User.IsInRole("tenant"))
    {
        <a class="nav-link" asp-controller="Dashboard" asp-action="Security" target="__self">Security</a>
    }
    <a class="nav-link" asp-controller="Dashboard" asp-action="Notification" target="__self">Notifications</a>
</nav>
<hr class="mt-0 mb-4">
<div class="col-xl-8">
    <!-- Account details card-->
    <div class="card mb-4">
        <div class="card-header">Edit Payslip</div>
        <div class="card-body">
            <form method="post" asp-action="EditPayslip" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId" />
                <div class="mb-3">
                    <label asp-for="PaySlip" class="control-label"></label>
                    <input asp-for="PaySlip" class="form-control" type="file" placeholder="Id copy">
                    <span asp-validation-for="PaySlip" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-sm btn-outline-secondary">Update</button>
                <a asp-controller="Documents" asp-action="Index" class="btn btn-sm btn-outline-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>


