@model IEnumerable<Apartments>

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

@{
    ViewData["Title"] = "Apartments";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">XMat Rentals</h1>
        <p class="lead text-muted">More than just a home. Ha mi amukela e kaya ra nwina.</p>
        @if(!User.Identity.IsAuthenticated)
        {
            <p>
                <a asp-controller="AboutUs" asp-action="ContactUs" class="btn btn-sm btn-outline-secondary">Ask Our Agent </a>
            </p>

        }
       
    </div>
</section>
<div class="album py-4 bg-light">
    <div class="container">
        <div class="row">

            @foreach(var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.ApartmentPictures.Pic1" width="100%" hight="225" alt="@item.ApartmentCategory">
                        <div class="card-body">
                            <h3>R @item.Price</h3>
                            <p class="card-text">@item.Description</p>
                            <div class="address-group">                                
                                <div class="single_address">
                                    <i class="fa fa-map-marker"></i>
                                    <h4>Our Address</h4>
                                    <p>@item.Address.Address_Line1, @item.Address.City, @item.Address.State</p>                                    
                                </div>                                
                                <a class="stretched-link" asp-controller="Apartments" asp-action="Details" asp-route-id="@item.Id"></a>
                            </div>
                            <div class="d-flex justify-content-between align-items-center"> 
                                <div class="btn-group">                                  
                                    
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a asp-controller="Apartments" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-controller="Apartments" asp-action="AllocateTenant" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Allocate a tenant</a>
                                        <a asp-controller="Apartments" asp-action="DeleteApartment" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    }                                

                                </div>                                                             
                            </div>
                            <div> <h4 class="text-muted">Available Immediatly</h4></div>
                        </div>
                    </div>
                </div>
            }
           
        </div>
    </div>
</div>
