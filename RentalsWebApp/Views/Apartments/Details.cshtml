@model Apartments

@{
	ViewData["Title"] = "Details";
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<!DOCTYPE html>
<html lang="en">
<head>

	<meta name="viewport" content="width=device-width, initial-scale=1">

	<title>eCommerce Product Detail</title>
	<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">

</head>

<body>

	<div class="container">
		<div class="card">
			<div class="container-fliud">
				<div class="wrapper row">
					<div class="preview col-md-6">

						<div class="preview-pic tab-content">
							<div class="tab-pane active" id="pic-1"><img src=@Model.Picture /></div>
							<div class="tab-pane" id="pic-2"><img src=@Model.Picture /></div>
							<div class="tab-pane" id="pic-3"><img src=@Model.Picture /></div>
							<div class="tab-pane" id="pic-4"><img src=@Model.Picture   /></div>
							<div class="tab-pane" id="pic-5"><img src=@Model.Picture /></div>
						</div>
						<ul class="preview-thumbnail nav nav-tabs">
							<li class="active"><a data-target="#pic-1" data-toggle="tab"><img src=@Model.Picture  /></a></li>
							<li><a data-target="#pic-2" data-toggle="tab"><img src=@Model.Picture /></a></li>
							<li><a data-target="#pic-3" data-toggle="tab"><img src=@Model.Picture  /></a></li>
							<li><a data-target="#pic-4" data-toggle="tab"><img src=@Model.Picture /></a></li>
							<li><a data-target="#pic-5" data-toggle="tab"><img src=@Model.Picture /></a></li>
						</ul>

					</div>
					<div class="details col-md-6">
						<h3 class="product-title">@Model.ApartmentCategory</h3>
						<div class="rating">
							<div class="stars">
								<span class="fa fa-star checked"></span>
								<span class="fa fa-star checked"></span>
								<span class="fa fa-star checked"></span>
								<span class="fa fa-star"></span>
								<span class="fa fa-star"></span>
							</div>
							<span class="review-no">41 reviews</span>
						</div>
						<p class="apartment-description">@Model.Description </p>
						<p class="apartment-address">@Model.Address.Address_Line1 </p>
						<p class="product-description">@Model.Address.Address_Line2 </p>
						<p class="product-description">@Model.Address.City </p>
						<p class="product-description">@Model.Address.State </p>
						<p class="product-description">@Model.Address.Zip </p>
						<h4 class="price">current price: <span>@Model.Price</span></h4>

						<div class="action">
							<a asp-controller="AboutUs" asp-action="ContactUs" asp-route-id="@Model.Id"
								class="btn btn-sm btn-outline-secondary">Contact the Agent</a>
							<button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
