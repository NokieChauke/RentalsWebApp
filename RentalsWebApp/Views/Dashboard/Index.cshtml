@using RentalsWebApp.ViewModels
@model List<TenantsListViewModel>

<h1 class="display-6 fw-normal">User Dashbord</h1>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Apartments" asp-action="Create">Add Apartment</a>
<div class="album py-5 bg-light">
    <div class="container">
        <h2 class="display-6 fw-normal">Manage Tenets</h2>
        <div class="row row-cols-1 row-cols-sm-3 row-cols-md-5 g-3">
        </div>
    </div>
</div>
   

<div class="container my-5">  
    <div class="card">
        <a id="add__new__list" position="absolute" data-toggle="modal" data-target=".bd-example-modal-lg" asp-area="" asp-controller="Account" asp-action="Register">Add Tenetnt</a>
        
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Contact</th>
                    <th scope="col">Edit Tenent </th>
                    <th scope="col">Tenent Details</th>
                    <th scope="col">Upload Statement</th>
                </tr>
            </thead>
        @{
            int count = 1;
            @foreach (var item in Model)
            {                            
                <tbody>
                    <tr>
                        <th scope="row">@count</th>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.PhoneNumber</td>
                        <td>
                            <a asp-controller="Dashboard" asp-action="EditUserProfileByAdmin" asp-route-id="@item.Id"
                                class="btn btn-sm btn-outline-secondary">Edit</a>
                            <a asp-controller="Dashboard" asp-action="DeleteUser" asp-route-id="@item.Id"
                                class="btn btn-sm btn-danger fas fa-trash-alt">Delete</a>
                        </td>
                        <td>
                                <a asp-controller="Dashboard" asp-action="UserDetails" asp-route-id="@item.Id"
                                class="btn btn-sm btn-outline-secondary">Detail</a>
                        </td>
                        <td>
                                <a asp-controller="Billing" asp-action="UploadStatement" asp-route-id="@item.Id"
                                class="btn btn-sm btn-outline-secondary">Upload Statement</a>
                        </td>
                    </tr>
                </tbody>
                count = count + 1;
            }
        }

                   
                    
        </table>
    </div>             
           
            
    <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="card-body text-center">
                    <h4 class="card-title">Special title treatment</h4>
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                </div>
                <div class=" card col-8 offset-2 my-2 p-3">
                    <form>
                        <div class="form-group">
                            <label for="listname">List name</label>
                            <input type="text" class="form-control" name="listname" id="listname" placeholder="Enter your listname">
                        </div>
                        <div class="form-group">
                            <label for="datepicker">Deadline</label>
                            <input type="text" class="form-control" name="datepicker" id="datepicker" placeholder="Pick up a date">
                        </div>
                        <div class="form-group">
                            <label for="datepicker">Add a list item</label>
                            <div class="input-group">

                                <input type="text" class="form-control" placeholder="Add an item" aria-label="Search for...">
                                <span class="input-group-btn">
                                    <button class="btn btn-secondary" type="button">Go!</button>
                                </span>
                            </div>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-block btn-primary">Sign in</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
 